{% extends 'base.html.twig' %}
{% block title %}Welcome!{% endblock %}
{% block stylesheets %}
  <style>
    body {
      background-color: #cccccc;
    }

    a {
      color: red;
    }

    input {
      width: 100%;
    }

    input[type=submit] {
      background-color: #4CAF50;
      border: none;
      color: white;
      padding: 16px 32px;
      text-decoration: none;
      margin: 10px 5px;;
      cursor: pointer; }
   
    input.beige {
      background-color: beige;
    }

    input.orange {
      background-color:  #ffdd99;
    }

    input.yellow {
      background-color:  #ffff99;
   
    }
    
    li {
      color:#6f2020;
      font-size: 13px; 
      list-style: none;
      text-align: left;
    }
    
    ul {
      padding: 0;
      margin:0
    }
    
    .input-holder {
      margin-bottom:20px;
      text-align: left;   
    }  
  </style>
{% endblock %}

{% block body %}
  <center>
    <div style='padding: 50px;background-color: lightblue;'>
      <h1 style='font-size: 30px;text-align: center;'>
        Edit{% if firstName is defined %}{{ firstName }} {% else%} User {% endif %}        
      </h1>
    </div>    
    <div style='width: 400px; padding: 75px;background-color: gray;'>
      {{ form_start(editForm) }}      
      {{ form_errors(editForm) }}
      
        <div class="input-holder">
          {{ form_label(editForm.firstName)}}
          {{ form_widget(editForm.firstName, {'attr': {'class': 'orange'}})}}
          {{ form_errors(editForm.firstName)}}
        </div>

        <div class="input-holder">
          {{ form_label(editForm.lastName)}}                               
          {{ form_widget(editForm.lastName, {'attr': {'class': 'beige'}})}}
          {{ form_errors(editForm.lastName) }}
        </div>                      
                       
        <div class="input-holder">
          {{ form_label(editForm.birthday)}}          
          {{ form_widget(editForm.birthday)}}
          {{ form_errors(editForm.birthday)}}
        </div>
        
        <input type="submit" value="Save changes">
        
      {{ form_end(editForm) }}
      
    </div>
    <p><b><a href="{{ path('homepage') }}" style="text-align:center">Homepage></a></b></p>
  </center>
{% endblock %}
