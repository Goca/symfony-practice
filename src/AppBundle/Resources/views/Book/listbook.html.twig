% extends 'base.html.twig' %}
{% block title %}List of Books{% endblock %}
{% block stylesheets %}
  <style>
    table, th, td {
      border: 1px solid black;
      border-collapse: collapse;
      padding: 5px;
      text-align: left;
      margin-top: 20px;
    }
  </style>
{% endblock %} 

{% block body %}
  <div class="container">
    <table class="table table-striped">
      <thead class="thead-dark">
        <tr>    
          <th>Title</th>
          <th>ISBN</th>
          <th>Year of publishing</th>
          <th>Category</th>
          <th>Author</th>
          <th>Featured</th>
          <th>Actions</th>
        </tr>
      </thead>
      {% for book in books %}
      <tr>    
        <td>{{ book.title }}</td>
        <td>{{ book.isbn }}</td>
        <td>{{ book.yearOfPublishing }}</td> 
        <td>{{ book.category)}}</td> 
        <td>{{ book.author)}}</td> 
        
        <td><center><a href="{{ path('app_book_delete', { 'id': book.id }) }}" style="text-align:center">Delete</a><br/>
          <a href="{{ path('app_book_edit', { 'id': book.id }) }}" style="text-align:center">Edit</a> </center></td>       
      </tr>
      {% endfor %}
    </table>
  </div>
{% endblock %}