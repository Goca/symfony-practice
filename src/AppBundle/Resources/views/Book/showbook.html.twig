{% extends 'base.html.twig' %}
{% block stylesheets %}
  <style>
    table, th, td {
      border: 1px solid black;
      border-collapse: collapse;
      padding: 5px;
      text-align: left;
      margin-top: 20px;
    }
  </style>
{% endblock %} 
{% block body %}
  <div class="container">
    <table class="table table-striped">
      <thead class="thead-dark">
        <tr>    
          <th>Title</th>
          <th>ISBN</th>
          <th>Year of publishing</th>
          <th>Category</th>
          <th>Author</th>          
        
        </tr>
      </thead>
      <tr>    
        <td>{{ book.title }}</td>
        <td>{{ book.isbn }}</td>
        <td>{{ book.yearOfPublishing|date('Y')}}</td>        
        <td>{{ book.category}}</td> 
        <td>{{ book.author}}</td>
      </tr>      
    </table>
  </div>      
{% endblock %}
