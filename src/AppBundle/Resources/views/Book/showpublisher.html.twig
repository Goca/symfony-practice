{% extends 'base.html.twig' %}
{% block stylesheets %}
  <style>
    table, th, td {
      border: 1px solid black;
      border-collapse: collapse;
      padding: 5px;
      text-align: left;
      margin-top: 20px;
    }
  </style>
{% endblock %} 
{% block body %}
  <div class="container">
    <table class="table table-striped">
      <thead class="thead-dark">
        <tr>    
         <th>Title</th>
         <th>City</th>                  
        </tr>
      </thead>
      <tr>    
        <td>{{ publisher.title }}</td>
        <td>{{ publisher.city }}</td>  
      </tr>      
    </table>
  </div>      
  {% if books is null %}
    <p style='font-size: 12px;text-align: center;'> No books found for this publisher </p>            
    {% elseif books is not null %}   
      <div class="container">  
        {% include '@App/Book/_booktable.html.twig' %}   
      </div>  
  {% endif %}  
{% endblock %}