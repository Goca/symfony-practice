{% extends 'base.html.twig' %}
{% block stylesheets %}
  <style>
    table, th, td {
      border: 1px solid black;
      border-collapse: collapse;
      padding: 5px;
      text-align: left;
      margin-top: 20px;
    }
  </style>
{% endblock %} 
{% block body %}
  <div class="container">
    <h1 style='font-size: 20px;text-align: left;'> Publisher</h1>
    <table class="table table-striped">
      <thead class="thead-dark">
        <tr>    
         <th>Title</th>
         <th>City</th>                  
        </tr>
      </thead>
      <tr>    
        <td>{{ publisher.title }}</td>
        <td>{{ publisher.city }}</td>  
      </tr>      
    </table><br/>
  </div>      
  {% if books|length == 0 %}
    <p style='font-size: 20px;text-align: center;'> No books found for this publisher. </p>            
      {% elseif books|length > 0 %}   
        <div class="container">
          <h1 style='font-size: 20px;text-align: left;'> Books of this publisher</h1>
          <h1 style='font-size: 15px;text-align: left;'> (Background color for featured books is blue.)</h1>         
          {% include '@App/Book/_booktable.html.twig' %}   
        </div>  
  {% endif %}  
{% endblock %}

